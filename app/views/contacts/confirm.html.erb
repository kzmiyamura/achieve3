<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <h3>以下の内容で、送信する。</h3>
    
    <%= form_for(@contact) do |f| %>
      <!-- `f.hidden_field`を使用して、リクエストパラメータに値を設定できるようにしています。 -->
      <%= f.hidden_field :name, class: 'form-control' %>
      <%= f.hidden_field :email, class: 'form-control' %>
      <%= f.hidden_field :content, class: 'form-control' %>
    
      <!-- @blog.titleと@blog.contentとすることで、表示用の値を画面に出力しています。 -->
      <p>name:<%= @contact.name %></p>
      <p>email:<%= @contact.email %></p>
      <p>content:<%= @contact.content %></p>
      <%= f.submit '登録する', class: 'btn btn-primary btn-block' %>
    <% end %>
    
    <%= form_for(@contact, url: new_contact_path, method: 'get') do |f| %>
      <%= f.hidden_field :name, class: 'form-control' %>
      <%= f.hidden_field :email, class: 'form-control' %>
      <%= f.hidden_field :content, class: 'form-control' %>
      <%= f.submit '戻る', name: 'back', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>
